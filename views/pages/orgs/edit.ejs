                                                            <img id="carousel_pic_1" src="<%= profile.carousel[0] %>"
                                                                alt="First slide" style="height: 360px">
                                                            <% } else { %>
                                                            <img id="carousel_pic_1" src="../images/placeholder_orgprofile_carousel.png"
                                                            alt="First slide" style="height: 360px">
                                                            <% } %>
                                                            <input id='carousel1_input' type="file" accept="image/*" name="carousel1"
                                                                onchange="previewImage(event, 'carousel_pic_1')" style="position: absolute; top: 75%; left: 50%; transform: translate(-50%, -50%); -ms-transform: translate(-50%, -50%);
                                                            padding: 12px 24px;
                                                            border: none;
                                                            border-radius: 5px;
                                                            background: #ffffffb2;">
                                                        </div>
                                                    </div>
                                                    <div class="carousel-item" style="text-align: center">
                                                        <div class="container">
                                                            <% if(profile.carousel[1] != null) { %>
                                                                <img id="carousel_pic_2" src="<%= profile.carousel[1] %>"
                                                                    alt="First slide" style="height: 360px">
                                                                <% } else { %>
                                                                <img id="carousel_pic_2" src="../images/placeholder_orgprofile_carousel.png"
                                                                alt="First slide" style="height: 360px">
                                                            <% } %>
                                                            <input id='carousel2_input' type="file" accept="image/*" name="carousel2"
                                                                onchange="previewImage(event, 'carousel_pic_2')" style="position: absolute; top: 75%; left: 50%; transform: translate(-50%, -50%); -ms-transform: translate(-50%, -50%);
                                                                padding: 12px 24px;
                                                                border: none;
                                                                border-radius: 5px;
                                                                background: #ffffffb2;
                                                                text-align: right;">
                                                        </div>
                                                    </div>
                                                    <div class="carousel-item" style="text-align: center">
                                                        <div class="container">
                                                            <% if(profile.carousel[2] != null) { %>
                                                                <img id="carousel_pic_3" src="<%= profile.carousel[2] %>"
                                                                    alt="First slide" style="height: 360px">
                                                                <% } else { %>
                                                                <img id="carousel_pic_3" src="../images/placeholder_orgprofile_carousel.png"
                                                                alt="First slide" style="height: 360px">
                                                            <% } %>
                                                            <input id='carousel3_input' type="file" accept="image/*" name="carousel3"
                                                                onchange="previewImage(event, 'carousel_pic_3')"style="position: absolute; top: 75%; left: 50%; transform: translate(-50%, -50%); -ms-transform: translate(-50%, -50%);
                                                                padding: 12px 24px;
                                                                border: none;
                                                                border-radius: 5px;
                                                                background: #ffffffb2;
                                                                text-align: right;">
                                                        </div>
                                                    </div>
                                                <% } else { %>
                                                    <div class="carousel-item active" style="text-align: center">
                                                        <div class="container" style="position: relative">
                                                            <img id="carousel_pic_1" src="../images/placeholder_orgprofile_carousel.png"
                                                            alt="First slide" style="height: 360px">
                                                            <input id='carousel1_input' type="file" accept="image/*" name="carousel1"
                                                                onchange="previewImage(event, 'carousel_pic_1')" style="position: absolute; top: 75%; left: 50%; transform: translate(-50%, -50%); -ms-transform: translate(-50%, -50%);
                                                            padding: 12px 24px;
                                                            border: none;
                                                            border-radius: 5px;
                                                            background: #ffffffb2;">
                                                        </div>
                                                    </div>
                                                    <div class="carousel-item" style="text-align: center">
                                                        <div class="container">
                                                            <img id="carousel_pic_2" src="../images/placeholder_orgprofile_carousel.png"
                                                            alt="First slide" style="height: 360px">
                                                            <input id='carousel2_input' type="file" accept="image/*" name="carousel2"
                                                                onchange="previewImage(event, 'carousel_pic_2')" style="position: absolute; top: 75%; left: 50%; transform: translate(-50%, -50%); -ms-transform: translate(-50%, -50%);
                                                                padding: 12px 24px;
                                                                border: none;
                                                                border-radius: 5px;
                                                                background: #ffffffb2;
                                                                text-align: right;">
                                                        </div>
                                                    </div>
                                                    <div class="carousel-item" style="text-align: center">
                                                        <div class="container">
                                                            <img id="carousel_pic_3" src="../images/placeholder_orgprofile_carousel.png"
                                                            alt="First slide" style="height: 360px">
                                                            <input id='carousel3_input' type="file" accept="image/*" name="carousel3"
                                                                onchange="previewImage(event, 'carousel_pic_3')"style="position: absolute; top: 75%; left: 50%; transform: translate(-50%, -50%); -ms-transform: translate(-50%, -50%);
                                                                padding: 12px 24px;
                                                                border: none;
                                                                border-radius: 5px;
                                                                background: #ffffffb2;
                                                                text-align: right;">
                                                        </div>
                                                    </div>
                                                <% } %>
                                            </div>
                                            <a class="left carousel-control" href="#org-carousel" role="button"
                                                data-slide="prev">
                                                <span class="icon-prev" aria-hidden="true"></span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                            <a class="right carousel-control" href="#org-carousel" role="button"
                                                data-slide="next">
                                                <span class="icon-next" aria-hidden="true"></span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>

                    <div class="row match-height"> <!-- Jobs and Events and past works -->
                        <div class="col-lg-6 col-md-6 col-sm-12"> <!-- Jobs and events -->
                            <!--Jobs -->
                            <div class="card">
                                <div style="color: white" class="card-header bg-blue bg-accent-2">
                                    <h4 class="card-title"><i class="ft-clipboard"></i> Jobs</h4>
                                    <a class="heading-elements-toggle">
                                        <i class="fa fa-ellipsis-v font-medium-3"></i>
                                    </a>
                                </div>
                                <div style="display: block; max-height: 300px; overflow-y: auto; -ms-overflow-style: -ms-autohiding-scrollbar;"
                                    class="card-body collapse-in">
                                    <% let jobCount = 0; %>
                                    <% jobs.forEach(job => { %>
                                    <% if(job.org_name == currentAcc.name) { %>
                                    <div style="margin: 5px; padding: 10px; border-bottom: 2px solid #92a8d1"
                                        class="container-fluid">
                                        <h4><strong><%= job.name %></strong></h4>
                                        <h5 style="font-style: italic">-<%= job.org_name %>-</h5>
                                        <h6>Deadline:
                                            <%= months[job.app_deadline.getMonth()] + ' ' + job.app_deadline.getDate() + ', ' + job.app_deadline.getFullYear() %>
                                        </h6>
                                        <% job.hashtags.forEach(hashtag => { %>
                                        <% var isMatch = false; %>
                                        <% criteriaList.forEach(criteria => { %>
                                        <% if (hashtag.includes(criteria) && !isMatch) { %>
                                        <% isMatch = true; %>
                                        <span style="font-size: 14px"
                                            class="tag tag-pill tag-warning"><%= hashtag; %></span>
                                        <% } %>
                                        <% }); %>
                                        <% if (!isMatch) { %>
                                        <span style="font-size: 14px"
                                            class="tag tag-pill tag-info"><%= hashtag; %></span>
                                        <% } %>
                                        <% }); %>
                                    </div>
                                    <% jobCount += 1; %>
                                    <% } %>
                                    <% }); %>
                                    <% if (jobCount == 0) { %>
                                    <div style="margin: 5px; padding: 10px; border-bottom: 2px solid #92a8d1"
                                        class="container-fluid">
                                        <h4>You have no open job positions. <a href="jobs/manage">Click here to
                                                add one</a></h4>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <!-- Events -->
                            <div class="card">
                                <div style="color: white" class="card-header bg-amber bg-darken-1">
                                    <h4 class="card-title"><i class="ft-calendar"></i> Events</h4>
                                    <a class="heading-elements-toggle">
                                        <i class="fa fa-ellipsis-v font-medium-3"></i>
                                    </a>
                                </div>
                                <div class="card"
                                    style="display: block; max-height: 500px; overflow-y: auto; -ms-overflow-style: -ms-autohiding-scrollbar;">
                                    <div class="table-responsive">
                                        <table class="table" style="margin-bottom: 0px">
                                            <tbody id="eventsBody">
                                                <% let eventCount = 0; %>
                                                <% events.forEach(event => { %>
                                                <tr class="btn-secondary">
                                                    <% if(event.reg_deadline) { %>
                                                    <th style="width:50px">
                                                        <%= months[event.reg_deadline.getMonth()] + ' ' + event.reg_deadline.getDate() + ', ' + event.reg_deadline.getFullYear() %>
                                                    </th>
                                                    <% } else { %>
                                                    <th style="width:50px">N/A</th>
                                                    <% } %>
                                                    <td style="max-width: 130px">
                                                        <li style="font-size: 16px">
                                                            <strong><%= event.name %></strong></li>
                                                        <li style="font-style: italic"><%= event.org_name %>
                                                        </li>
                                                        <% if(event.start_date) { %>
                                                        <li style="font-size: small">Date:
                                                            <%= months[event.start_date.getMonth()] + ' ' + event.start_date.getDate() + ', ' + event.start_date.getFullYear() %>
                                                        </li>
                                                        <% } %>
                                                        <li style="font-size: small">At: <%= event.address %>
                                                        </li>
                                                    </td>
                                                    <td style="max-width: 120px">
                                                        <div id="<%= event._id %>2" class="hashes">
                                                            <% event.hashtags.forEach(hashtag => { %>
                                                            <% var isMatch = false; %>
                                                            <% criteriaList.forEach(criteria => { %>
                                                            <% if (hashtag.includes(criteria) && !isMatch) { %>
                                                            <% isMatch = true; %>
                                                            <span style="font-size: 14px"
                                                                class="tag tag-pill tag-warning"><%= hashtag; %></span>
                                                            <% } %>
                                                            <% }); %>
                                                            <% if (!isMatch) { %>
                                                            <span style="font-size: 14px"
                                                                class="tag tag-pill tag-info"><%= hashtag; %></span>
                                                            <% } %>
                                                            <% }); %>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% eventCount++; %>
                                                <% }); %>
                                                <% if(eventCount == 0) { %>
                                                <tr style="border-bottom: 2px solid #ec6416;">
                                                    <th style="margin: 5px; padding: 10px">
                                                        You has no upcoming event. <a href="events/manage">Click
                                                            here to add one.</a>
                                                    </th>
                                                </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>


                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card">
                                <div class="card-header bg-success bg-darken-1" style="color: white">
                                    <h4 class="card-title"><i class="ft-clipboard"></i> Past work</h4>
                                    <a class="heading-elements-toggle">
                                        <i class="fa fa-ellipsis-v font-medium-3"></i>
                                    </a>
                                </div>
                                <div class="card-body collapse-in">
                                    <div class="card-block">
                                        <fieldset
                                            class="form-group position-relative has-icon-left container-fluid">
                                            <label class="label-control" for="past_work">Past Work</label>
                                            <div>
                                                <% if(profile != null && profile.past_work != null) { %>
                                                <textarea class="form-control col-md-12 col-lg-12"
                                                    value="<%= profile.past_work %>" id="past-work-content"
                                                    name="past_work"
                                                    style="height: 65px; font-size: 15px"><%= profile.past_work %></textarea>
                                                <div class="form-control-position">
                                                    <i class="ft-info"
                                                        style="position: relative; top: 25px"></i>
                                                </div>
                                                <% } else { %>
                                                <textarea class="form-control col-md-12 col-lg-12"
                                                    placeholder="Describe your organization's past work"
                                                    id="past-work-content" name="past_work"
                                                    style="height: 65px; font-size: 15px"></textarea>
                                                <div class="form-control-position">
                                                    <i class="ft-info"
                                                        style="position: relative; top: 25px"></i>
                                                </div>
                                                <% } %>
                                            </div>
                                        </fieldset>                                
                                    </div>
                                </div>         
                            </div>
                        </div>                       
                    </div>
                </section>
            </form>
            <div class="row">
                <!-- Submit button -->
                <div class="text-xs-center form-actions">
                    <button id="submitBtn" onclick="freezeBtn();" class="btn btn-lg btn-outline-info">Save
                        changes</button>
                </div>
            </div>

        </div>
    </div>

</div>

