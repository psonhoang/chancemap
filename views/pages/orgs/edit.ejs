<script>
    function follow(user_id, org_id, org_username) {
        let button_id = '#' + org_id;
        $(button_id).removeClass('btn-info');
        $(button_id).addClass('btn-success');
        $(button_id).html('<i class="fa fa-check"></i> Followed');
        $(button_id).attr('onclick', 'unfollow("' + user_id + '","' + org_id + '","' + org_username + '")');

        let formData = new FormData();
        formData.append("org_id", org_id);
        formData.append("user_id", user_id);
        formData.append('follow', "true");

        $.ajax({
            async: true,
            url: '/follow',
            method: 'POST',
            processData: false,
            contentType: false,
            data: formData,
            success: (data) => {
                toastr.success('You started following ' + org_username, 'Followed!');
            }
        });
    }

    function unfollow(user_id, org_id, org_username) {
        let button_id = '#' + org_id;
        $(button_id).removeClass('btn-success');
        $(button_id).addClass('btn-info');
        $(button_id).html('<i class="fa fa-eye"></i> Follow');
        $(button_id).attr('onclick', 'follow("' + user_id + '","' + org_id + '","' + org_username + '")');

        let formData = new FormData();
        formData.append("org_id", org_id);
        formData.append("user_id", user_id);
        formData.append("follow", 'false');

        $.ajax({
            async: true,
            url: '/follow',
            method: 'POST',
            processData: false,
            contentType: false,
            data: formData,
            success: (data) => {
                toastr.warning('You have unfollowed ' + org_username, 'Unfollowed!');
            }
        });
    }

    function compressImage (image, quality) {
        return compressed_image = new Promise((resolve, reject) => {
            let img = new Image();
            img.src = image;
            img.onload = function () {
                const elem = document.createElement('canvas');
                elem.width = img.width;
                elem.height = img.height;
                const ctx = elem.getContext('2d');
                ctx.drawImage(img, 0, 0, img.width, img.height);
                ctx.canvas.toBlob((blob) => {
                    resolve(blob);
                }, 'image/jpeg', quality);
            }
        });
    }

    function previewImage(event, id) {
        let reader = new FileReader();
        let output = document.getElementById(id);

        reader.readAsDataURL(event.target.files[0]);

        reader.onload = async function () {
            let compressed_image = await compressImage(reader.result, 0.5);
            console.log("Image compressed");
            var url = URL.createObjectURL(compressed_image);
            output.src = url;
        }
    }

    function readAsDataURLawait(file) {
        let reader = new FileReader;
        reader.readAsDataURL(file);
        return new Promise((resolve, reject) => {
            reader.onload = function () {
                resolve(reader.result);
            }
        });  
    }

    async function freezeBtn() {
        $('#submitBtn').disabled = true;

        //turn new lines into <br>
        $('#desc-content').val(JSON.parse(newLinesToBr(JSON.stringify($('#desc-content').val()))));
        $('#what-we-do-content').val(JSON.parse(newLinesToBr(JSON.stringify($('#what-we-do-content').val()))));
        $('#our-team-content').val(JSON.parse(newLinesToBr(JSON.stringify($('#our-team-content').val()))));
        $('#past-work-content').val(JSON.parse(newLinesToBr(JSON.stringify($('#past-work-content').val()))));
        //end

        var form = document.getElementsByTagName("form")[0];
        var formData = new FormData(form);
        var usedKeys = [];

        for(var pair of formData.entries()) {
            if (pair[1].name != '' && pair[1].name != undefined && usedKeys.indexOf(pair[0]) < 0) {
                console.log(pair[0] + ' : ' + pair[1].size);
                let id = pair[0] + '_input';
                let picture = document.getElementById(id).files[0];
                var filename = 'compressed_' + picture.name;

                var dataURL = await readAsDataURLawait(picture);
                let compressed_image = await compressImage(dataURL, 0.5);
                formData.delete(pair[0]);
                var file = new File([compressed_image], filename, {
                    type: 'image/jpeg',
                    lastModified: Date.now()
                    });   
                formData.append(pair[0], file); 
                usedKeys.push(pair[0]);
                console.log("Added new file");
            }
        }

        $.ajax({
            async: true,
            url: '/profile/org',
            method: 'POST',
            beforeSend: (req) => {
              $.blockUI({            
                message: '<h1 style="margin-top: 0.5rem; margin-bottom: 0.5rem;">Saving...</h1>',
                css: {
                  padding: 0,
                  margin: 0,
                  width: "20%",
                  top: "40%",
                  left: "40%",
                  textAlign: 'center',
                  color: 'rgb(0, 0, 0)',
                  border: 'none',
                  backgroundColor: 'rgb(255, 255, 255)',
                  cursor: 'wait'
                }
              });
            },
            contentType: false,
            processData: false,
            data: formData,
            success: (data) => {
              $.unblockUI();
              window.location.reload();
            }
          });
    }

    function brToNewLines(text) {
        return text.replace(/<br>/g, "\\n");
    }

    function newLinesToBr(text) {
        return text.replace(/\\n/g, "<br>");
    }

