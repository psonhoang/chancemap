        $('#what-we-do-content').val(JSON.parse(brToNewLines(JSON.stringify($('#what-we-do-content').val()))));
        $('#our-team-content').val(JSON.parse(brToNewLines(JSON.stringify($('#our-team-content').val()))));
        $('#past-work-content').val(JSON.parse(brToNewLines(JSON.stringify($('#past-work-content').val()))));
    });

