      var type = 'image/' + filename.split('.')[1];
      let reader = new FileReader();
      reader.readAsDataURL(avatar_input.files[0]);
      reader.onload = function () {
        file = compressImage(reader.result, type, 0.7, 200, 200, filename, function(compressed_image) {
          var formData = new FormData(form);
          formData.delete("avatar");
          formData.append("avatar", compressed_image, filename);
          $.ajax({
            async: true,
            url: '/profile/user',
            method: 'POST',
            beforeSend: (req) => {
              $.blockUI({            
                message: '<h1 style="margin-top: 0.5rem; margin-bottom: 0.5rem;">Saving...</h1>',
                css: {
                  padding: 0,
                  margin: 0,
                  width: "20%",
                  top: "40%",
                  left: "40%",
                  textAlign: 'center',
                  color: 'rgb(0, 0, 0)',
                  border: 'none',
                  backgroundColor: 'rgb(255, 255, 255)',
                  cursor: 'wait'
                }
              });
            },
            contentType: false,
            processData: false,
            data: formData,
            success: (data) => {
              $.unblockUI();
              window.location.reload();
            }
          });
        });
      }
    } else {
      document.getElementById('submitBtn').disabled = true;
      form.submit();
    }
  }
</script>
