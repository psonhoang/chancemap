<!-- card actions section start -->
<section id="card-actions">
<div class='row'></div>
<%  var jobCounts = 0; %>
<%  jobs.forEach(function(job){ %>
  <%  if (jobCounts >= 2) { %>
          <div class='row'></div>
  <%      jobCounts = 0; %>
  <%  } %>
  <%- include('jobCard', { job: job, admin: true, months: months}); %>
  <%  jobCounts += 1; %>
<%  }) %>
</section>
<!-- // card-actions section end -->
        </div>
	  </div>

