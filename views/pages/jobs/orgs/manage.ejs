</div>

<!-- BEGIN CODE DAO SCRIPTS -->
<script>
  function DeleteJob(Id) {
    var confirm = window.confirm("Do you want to delete this job?");
    if (confirm == true)
    {
      //create a form that submits the id of the deleted job:
      var form = document.createElement("form");
      form.method = "POST";
      form.action = "/jobs/delete";
      
      var input = document.createElement("input");
      input.value = Id;
      input.name = "JobID";
      form.appendChild(input);

      document.body.appendChild(form);
      form.submit();
    }
    else
    {
      //do nothing
      return null;
    }
  }
</script>
<!-- ENDS -->