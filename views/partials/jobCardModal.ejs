<div id="<%= cardId %>" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal Content Starts -->
        <div class="col-md-12 col-sm-12">
            <div class="card" id="<%= cardId %>">
                <div style="color: white" class="card-header bg-cyan bg-lighten-1">
                    <h4 class="card-title"><%= job.name %></h4>
                    <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i><i class="fa fa-ellipsis-v font-medium-3"></i><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <% if (admin == true) { %>
                            <li><a href="/jobs/manage/edit/<%= cardId %>"><i class="ft-edit-2"></i></a></li>                        
                            <li><a onclick="DeleteJob('<%= cardId %>')"><i class="ft-x"></i></a></li>	
                            <% } %>							
                        </ul>
                    </div>
                </div>
                <div class="card-body collapse in">
                    <div class="card-block">
                        <p><lable>Organisation's Name: </lable><b><%= job.org_name %></b></p>
                        <p><lable>Job's Description: </lable><b><%= job.desc %></b></p>
                        <% job.hashtags.forEach(function(tag) { %> 
                        <p style="font-size: 13px" class="tag tag-pill tag-info"><%= tag; %></p>
                        <% }); %>
                        <p><label>Application Form: </label> <b><a href="<%= job.app_form %>"><%= job.app_form %></a> </b></p>
                        <p><lable>Application Deadline: </lable> <b><%= months[job.app_deadline.getMonth()] + ' ' + job.app_deadline.getDate() + ', ' + job.app_deadline.getFullYear() %></b></p>
                        <p><label>Facebook: </label>
                            <b>
                            <% if (job.facebook != undefined) { %>
                                <a href="<%= job.facebook %>"><i class="ft-facebook"></i></a>
                            <% } else { %>
                                To be updated.
                            <% } %>
                            </b>
                        </p>
                        <p><label>Website: </label>
                            <b>
                                <% if (job.website != undefined) { %>
                                    <a href="<%= job.website %>"><i class="ft-globe"></i></a>
                                <% } else { %>
                                    To be updated.
                                <% } %>             
                            </b>
                        </p>
                    </div>
               </div>
            </div>
        </div>
        <!-- Modal Content Ends -->

    </div>
</div>
