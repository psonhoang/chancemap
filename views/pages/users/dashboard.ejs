<% extend('../../defaultLayouts/defaultLayout'); %>

<div class="app-content content container-fluid">
  <div class="content-wrapper">
    <div class="content-header row col-xs-10">
      <div class="content-header-left col-md-6 col-xs-12 mb-2">
        <h3 class="content-header-title mb-0">Users</h3>
        <div class="row breadcrumbs-top">
          <div class="breadcrumb-wrapper col-xs-12">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href='/'>Home</a>
              </li>
              <li class="breadcrumb-item"><a>Users</a>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row"></div>
  <div class="content-wrapper">
        <div class="row">
            <!-- Users -->
            <div class="card">
                <div style="color: white" class="card-header bg-pink bg-accent-1">
                <h4 class="card-title"><i class="ft-calendar"></i> Users</h4>
                <a class="heading-elements-toggle">
                    <i class="fa fa-ellipsis-v font-medium-3"></i>
                </a>
                </div>
                <div class="card">
                    <div class="table-responsive">
                        <table class="table">        
                            <tbody id="usersBody">
                                <% users.forEach(user => { %>
                                    <% cardId = user._id; %>
                                    <% if(currentAcc.username != user.username) { %>
                                        <tr class="btn-secondary" style="border: 0" data-toggle="modal" data-target="#<%= cardId %>">       
                                            <th scope="row">
                                                <div class="user-avatar">
                                                    <a href="#">
                                                    <img src="<%= user.avatar; %>" class="rounded-circle width-50 height-50" alt="org avatar">
                                                    </a>
                                                </div>
                                            </th>     
                                            <td width="400px">
                                            <ul align="left">
                                                <li style="font-size: 16px"><strong><%= user.name %></strong></li>
                                                <li style="font-style: italic"><%= user.username %></li>
                                                <li style="font-style: italic"><%= user.facebook %></li>
                                                <li style="font-style: italic"><%= user.email %></li>
                                            </ul>
                                            </td>
                                            <td>
                                            <% var hashtags = user.interests.concat(user.skills); %>
                                            <% hashtags.forEach (hashtag => { %>
                                            <% var isMatch = false; %>
                                            <% criteriaList.forEach(criteria => { %>
                                                <% if (hashtag.includes(criteria) && !isMatch) { %>
                                                <% isMatch = true; %>
                                                <span style="font-size: 14px" class="tag tag-pill tag-warning"><%= hashtag; %></span>
                                                <% } %>
                                            <% }); %>
                                            <% if (!isMatch) { %>
                                                <span style="font-size: 14px" class="tag tag-pill tag-info"><%= hashtag; %></span>
                                            <% } %>
                                            <% }); %>
                                            </td>
                                        </tr>
                                        <%- include('userCardModal', {user: user}); %> 
                                    <% } %>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!--  BEGIN CODEDAO SCRIPT -->
<script>
  $(document).ready(function() {
    $('#search-input').tagging('removeAll');
  });

  function search() {
    let x = document.getElementById('search-input');
    let tags = x.getElementsByTagName('div');
    let criteriaList = [];
    let inputValue;
    for (var i = 0; i < tags.length; i++) {
      inputValue = tags[i].getElementsByTagName('input')[0].value;
      criteriaList.push(inputValue);
    }
    // alert(criteriaList);
    $.ajax({
      async: true,
      url: '/api/search',
      method: 'GET',
      beforeSend: (req) => {
        $.blockUI();
      },
      data: {
        criteriaList: criteriaList
      },
      success: (data) => {
        let events = data.events;
        console.log(events);
        alert("Search complete!");
      
        $.unblockUI();
      }
    });
  }
</script>
<!-- END -->

