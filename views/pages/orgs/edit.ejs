<% extend('../../defaultLayouts/defaultLayout.ejs'); %>
<% var months = ["January", "February", "March", "April", "May", "June", "July","August", "September", "October","November", "December"]; %>
<div class="app-content content container-fluid">

    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-xs-12 mb-2">
                <h3 class="content-header-title mb-0">Organizations</h3>
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-xs-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a>
                            </li>
                            <li class="breadcrumb-item"><a href="/orgs">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item active"><%= currentAcc.name %>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">

            <form enctype="multipart/form-data" class="form-horizontal" action="/profile/org" method="POST">
                <section>

                    <div class="row">
                        <!-- Overview Card -->
                        <div class="col-md-3 col-lg-3 text-xs-center">
                            <!-- Avatar -->
                            <fieldset>
                                <img id="ava_preview" src="<%= currentAcc.avatar %>"
                                    class="rounded-circle width-200 height-200" alt="Card image">
                                <br><br>
                                <input id="avatar_input" type="file" accept="image/*" name="avatar"
                                    onchange="previewImage(event, 'ava_preview')" style="text-align: right">
                            </fieldset>
                        </div>
                        <div class="col-lg-9 col-md-9">
                            <div class="card">
                                <div style="color: white" class="card-header bg-darken-1 bg-teal">
                                    <!-- Card Header -->
                                    <h4 class="card-title">OVERVIEW</h4>
                                </div>
                                <div class="card-body collapse in">
                                    <div class="card-block">
                                        <fieldset>
                                            <!-- Name -->
                                            <label class="label-control" for="name">Name</label>
                                            <input type="text" class="form-control" value="<%= currentAcc.name %>"
                                                id="user-name" name="name" placeholder="Your org's name" required>
                                        </fieldset>
                                        <fieldset class="form-group position-relative has-icon-left"
                                            style="margin-top: 8px">
                                            <!-- Hashtags -->
                                            <label class="label-control" for="interests">#About</label>
                                            <div>
                                                <div id="hashtags-input" class="edit-on-delete form-control tagging"
                                                    data-tags-input-name="hashtags">
                                                    <input class="type-zone form-control" name="hashtags"
                                                        contenteditable="true" required>
                                                </div>
                                                <div class="form-control-position">
                                                    <i class="ft-hash" style="position: relative; top: 25px"></i>
                                                </div>
                                                <span style="font-style: italic" class="small">Enter your hashtags in
                                                    keywords (ex: youth) and 'Enter'</span>
                                            </div>
                                        </fieldset>
                                        <fieldset class="form-group position-relative has-icon-left"
                                            style="margin-top: 5px">
                                            <!-- Facebook -->
                                            <label class="label-control" for="facebook">Facebook</label>
                                            <div>
                                                <input type="url" class="form-control"
                                                    value="<%= currentAcc.facebook %>" id="user-name" name="facebook"
                                                    placeholder="Your org's Facebook page (optional)">
                                                <div class="form-control-position">
                                                    <i class="ft-facebook" style="position: relative; top: 25px"></i>
                                                </div>
                                            </div>
                                        </fieldset>
                                        <fieldset class="form-group position-relative has-icon-left"
                                            style="margin-top: 5px">
                                            <!-- Website -->
                                            <label class="label-control" for="website">Website</label>
                                            <div>
                                                <input type="url" class="form-control" value="<%= currentAcc.website %>"
                                                    id="user-name" name="website"
                                                    placeholder="Your org's website (optional)">
                                                <div class="form-control-position">
                                                    <i class="ft-globe" style="position: relative; top: 25px"></i>
                                                </div>
                                            </div>
                                        </fieldset>
                                        <fieldset class="form-group position-relative has-icon-left"
                                            style="margin-top: 5px">
                                            <!-- Email -->
                                            <label class="label-control" for="name">Email</label>
                                            <div>
                                                <input type="email" class="form-control" id="user-email" name="email"
                                                    value="<%= currentAcc.email; %>" required>
                                                <div class="form-control-position">
                                                    <i class="ft-mail" style="position: relative; top: 25px"></i>
                                                </div>
                                            </div>
                                        </fieldset>
                                        <fieldset class="form-group position-relative has-icon-left"
                                            style="margin-top: 5px">
                                            <!-- Description -->
                                            <label class="label-control" for="desc">Short Intro</label>
                                            <div>
                                                <textarea row="8" cols "15" class="form-control"
                                                    value="<%= currentAcc.desc %>" id="desc-content"
                                                    name="desc"><%= currentAcc.desc %></textarea>
                                                <div class="form-control-position">
                                                    <i class="ft-info" style="position: relative; top: 25px"></i>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>

                    <div class="row">
                        <!-- Who we are + Facebook + Our Team-->
                        <!-- Facebook embed -->
                        <% if(currentAcc.facebook != null) { %>
                        <div class="fb-page col-lg-5 col-md-5" data-width="470px" data-height="800px"
                            data-href="<%= currentAcc.facebook %>" data-tabs="timeline, events"
                            data-small-header="false" data-adapt-container-width="false" data-hide-cover="false"
                            data-show-facepile="true"></div>
                        <% } else { %>
                        <div class="col-lg-5 col-md-5">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-block">
                                        <p class="card-text"><b>Your organization's facebook page will be displayed here</b></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                        <div class="col-lg-7 col-md-7">
                            <!-- Who we are -->
                            <div class="row" id="who-we-are">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="card">
                                        <div style="color: white" class="card-header bg-red">
                                            <!-- Card Header -->
                                            <h4 class="card-title"><i class="ft-info"></i> WHO WE ARE</h4>
                                        </div>
                                        <div class="card-body collapse-in">
                                            <div class="card-block">

                                                <fieldset
                                                    class="form-group position-relative has-icon-left container-fluid">
                                                    <!-- What we do -->
                                                    <label class="label-control" for="what_we_do"
                                                        style="margin-top: 5px">What we do</label>
                                                    <div>
                                                        <% if(profile != null) { %>
                                                        <textarea class="form-control col-md-12 col-lg-12"
                                                            value="<%= profile.what_we_do %>" id="what-we-do-content"
                                                            name="what_we_do"
                                                            style="height: 400px; font-size: 15px"><%= profile.what_we_do %></textarea>
                                                        <div class="form-control-position">
                                                            <i class="ft-info"
                                                                style="position: relative; top: 30px"></i>
                                                        </div>
                                                        <% } else { %>
                                                        <textarea class="form-control col-md-12 col-lg-12"
                                                            placeholder="Describe your organization's mission"
                                                            id="what-we-do-content" name="what_we_do"
                                                            style="height: 400px; font-size: 15px"></textarea>
                                                        <div class="form-control-position">
                                                            <i class="ft-info"
                                                                style="position: relative; top: 25px"></i>
                                                        </div>
                                                        <% } %>
                                                    </div>
                                                </fieldset>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Our team -->
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="card" id="our-team">
                                        <div style="color: white" class="card-header bg-pink">
                                            <h4 class="card-title"><i class="ft-users"></i> OUR TEAM</h4>
                                        </div>
                                        <div class="card-body collapse-in">
                                            <div class="card-block">

                                                <fieldset
                                                    class="form-group position-relative has-icon-left container-fluid">
                                                    <label class="label-control" for="our_team">Our Team</label>
                                                    <div>
                                                        <% if(profile != null) { %>
                                                        <textarea class="form-control col-md-12 col-lg-12"
                                                            value="<%= profile.our_team %>" id="our-team-content"
                                                            name="our_team"
                                                            style="height: 65px; font-size: 15px"><%= profile.our_team %></textarea>
                                                        <div class="form-control-position">
                                                            <i class="ft-info"
                                                                style="position: relative; top: 25px"></i>
                                                        </div>
                                                        <% } else { %>
                                                        <textarea class="form-control col-md-12 col-lg-12"
                                                            placeholder="Describe your organization's team"
                                                            id="our-team-content" name="our_team"
                                                            style="height: 65px; font-size: 15px"></textarea>
                                                        <div class="form-control-position">
                                                            <i class="ft-info"
                                                                style="position: relative; top: 25px"></i>
                                                        </div>
                                                        <% } %>
                                                    </div>
                                                </fieldset>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>

                    <div class="row">
                        <!-- Carousel -->
                        <div class="col-md-12 col-sm-12 col-lg-12">
                            <div class="card">
                                <div style="color: white" class="card-header bg-purple">
                                    <h4 class="card-title">PICTURES</h4>
                                </div>
                                <div class="card-body">
                                    <div class="card-block">
                                        <div id="org-carousel" class="carousel slide" data-ride="carousel"
                                            data-interval="false">
                                            <ol class="carousel-indicators">
                                                <li data-target="#org-carousel" data-slide-to="0" class="active"></li>
                                                <li data-target="#org-carousel" data-slide-to="1"></li>
                                                <li data-target="#org-carousel" data-slide-to="2"></li>
                                            </ol>
                                            <div class="carousel-inner" role="listbox">
